#include <lpmd/cell.h>
#include <lpmd/vector.h>

using namespace lpmd;

@testsuite Tests de la clase Cell

@test Acceso a los vectores base
{
 Cell c(5.0, 6.0, 7.0);
 @approx c.GetVector(0).Mod(), 5.0, 0.00001
 @approx c.GetVector(1).Mod(), 6.0, 0.00001
 @approx c.GetVector(2).Mod(), 7.0, 0.00001
}
@end

@test Calculo del volumen
{
 Cell c(5.0, 5.0, 5.0);
 @approx c.Volume(), 125.0, 0.00001
}
@end

@test Escalamiento por porcentaje
{
 Cell c1(1.0, 1.0, 1.0), c2(1.0, 1.0, 1.0);
 c1.ScalePercent(0, 20);
 @approx c1.GetVector(0).Mod(), 1.2, 0.00001 
 c2.ScalePercent(0, -20);
 @approx c2.GetVector(0).Mod(), 0.8, 0.00001 
}
@end

@test Este test siempre fallara
{
 @assert 2 + 2 == 5
}
@end

